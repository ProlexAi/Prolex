{
  "name": "prolex-tools-manager",
  "version": "1.0.0",
  "description": "Panneau de contrôle pour gérer tous les outils et applications Prolex",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "electron . --dev"
  },
  "keywords": [
    "prolex",
    "tools",
    "manager",
    "automatt"
  ],
  "author": "Matthieu - Automatt.ai",
  "license": "MIT",
  "dependencies": {
    "electron": "^28.0.0"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.automatt.prolex-tools-manager",
    "productName": "Prolex Tools Manager",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "directories": {
      "output": "dist"
    }
  }
}
