# Prolex Web Scraper Configuration

# Server Configuration
PORT=3500
NODE_ENV=development

# Scraper Settings
SCRAPER_TIMEOUT_MS=15000
SCRAPER_USER_AGENT=ProlexScraper/1.0
SCRAPER_MAX_PAGES=20
SCRAPER_MAX_DEPTH=1

# Playwright Settings
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_BROWSER=chromium

# Storage Settings
SNAPSHOTS_DIR=./snapshots

# Security Settings
RESPECT_ROBOTS_TXT=true
MIN_DELAY_MS=500

# Optional: Vector Service Integration
VECTOR_SERVICE_URL=http://localhost:3600/ingest
VECTOR_SERVICE_ENABLED=false
