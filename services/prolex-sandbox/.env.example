# Configuration Prolex Sandbox

# URLs n8n
URL_N8N_TEST=http://localhost:5678
URL_N8N_PROD=https://n8n.automatt.ai

# Mode Sandbox
MODE_SANDBOX=strict
# Options: "strict" (bloque les actions à risque élevé) ou "relaxed" (simule tout mais alerte)

# Garde-fous
GARDES_FOUS_ACTIFS=true
MAX_ACTIONS_PAR_TEST=50

# Backup (placeholder pour v2)
BACKUP_OBLIGATOIRE=false

# Base de données
DB_TYPE=sqlite
# Options: "sqlite" ou "postgres"

# Si sqlite
DB_PATH=./sandbox/sandbox.db

# Si postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=prolex_sandbox
# DB_USER=prolex
# DB_PASSWORD=

# Serveur
PORT=3001
HOST=localhost

# Fichiers
FICHIER_SCENARIOS=./sandbox/scenarios.json

# Logging
LOG_LEVEL=info
# Options: error, warn, info, debug
