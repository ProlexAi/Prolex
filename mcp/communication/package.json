{
  "name": "@prolex/communication-mcp-server",
  "version": "1.0.0",
  "description": "Serveur MCP pour Communication Multi-Canal - Email, SMS, WhatsApp, Slack, Telegram - Sécurité Renforcée",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "watch": "tsx watch src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:security": "jest --testPathPattern=security",
    "lint": "tsc --noEmit",
    "docker:build": "docker build -t prolex/communication-mcp-server:latest .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down"
  },
  "keywords": [
    "mcp",
    "communication",
    "email",
    "sms",
    "whatsapp",
    "slack",
    "telegram",
    "sécurité",
    "rate-limiting",
    "typescript",
    "claude-desktop",
    "prolex",
    "français"
  ],
  "author": "ProlexAi",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@slack/web-api": "^7.6.0",
    "axios": "^1.7.9",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "googleapis": "^144.0.0",
    "nodemailer": "^6.9.8",
    "node-cache": "^5.1.2",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "telegraf": "^4.15.8",
    "twilio": "^5.3.4",
    "validator": "^13.11.0",
    "yaml": "^2.8.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^22.10.2",
    "@types/nodemailer": "^6.4.14",
    "@types/validator": "^13.11.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
