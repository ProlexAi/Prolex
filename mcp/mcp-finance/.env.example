# Environnement (development, staging, production)
NODE_ENV=development

# Stripe API (Paiements)
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# PayPal API (Paiements alternatifs)
PAYPAL_CLIENT_ID=xxxxx
PAYPAL_CLIENT_SECRET=xxxxx
PAYPAL_MODE=sandbox

# Plaid API (Connexion bancaire - optionnel)
PLAID_CLIENT_ID=xxxxx
PLAID_SECRET=xxxxx
PLAID_ENV=sandbox

# Google Sheets (Stockage comptabilité)
GOOGLE_SHEETS_CREDENTIALS_PATH=./credentials/google-sheets-key.json
COMPTABILITE_SPREADSHEET_ID=xxxxx

# CoinGecko API (Crypto - gratuit)
COINGECKO_API_KEY=xxxxx

# Binance API (Crypto trading - optionnel)
BINANCE_API_KEY=xxxxx
BINANCE_API_SECRET=xxxxx

# Logging SystemJournal
SYSTEM_JOURNAL_ENABLED=true
SYSTEM_JOURNAL_SPREADSHEET_ID=1xEEtkiRFLYvOc0lmK2V6xJyw5jUeye80rqcqjQ2vTpk

# Cache
CACHE_TTL_SECONDS=300
CACHE_ENABLED=true

# Sécurité
ENABLE_REQUEST_VALIDATION=true
MAX_INVOICE_AMOUNT=50000
REQUIRE_CONFIRMATION_ABOVE=10000

# Taux de change (API gratuite)
EXCHANGE_RATE_API_KEY=xxxxx

# Webhooks
WEBHOOK_SECRET=your_webhook_secret_here
