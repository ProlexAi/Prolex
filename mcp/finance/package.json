{
  "name": "@prolex/finance-mcp-server",
  "version": "1.0.0",
  "description": "Serveur MCP pour la gestion financière - Paiements, Comptabilité, Banque, Crypto - Prolex AI",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "watch": "tsx watch src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "tsc --noEmit",
    "docker:build": "docker build -t prolex/finance-mcp-server:latest .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down"
  },
  "keywords": [
    "mcp",
    "finance",
    "paiements",
    "comptabilité",
    "banque",
    "crypto",
    "stripe",
    "factures",
    "budget",
    "typescript",
    "claude-desktop",
    "prolex",
    "français"
  ],
  "author": "ProlexAi",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "stripe": "^14.10.0",
    "axios": "^1.7.9",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "node-cache": "^5.1.2",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "yaml": "^2.8.1",
    "zod": "^3.24.1",
    "dayjs": "^1.11.10"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^22.10.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
