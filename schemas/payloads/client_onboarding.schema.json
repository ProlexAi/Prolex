{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://automatt.ai/schemas/payloads/client_onboarding.schema.json",
  "title": "Client Onboarding Payload",
  "description": "Payload pour l'onboarding d'un nouveau client",
  "type": "object",
  "required": ["client_name", "contact_email"],
  "properties": {
    "client_name": {
      "type": "string",
      "description": "Nom de l'entreprise cliente",
      "minLength": 1
    },
    "contact_email": {
      "type": "string",
      "format": "email",
      "description": "Email du contact principal"
    },
    "contact_name": {
      "type": "string",
      "description": "Nom du contact principal"
    },
    "package": {
      "type": "string",
      "enum": ["starter", "professional", "enterprise"],
      "description": "Package souscrit par le client"
    },
    "workflows": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Liste des workflows à activer pour ce client"
    },
    "custom_settings": {
      "type": "object",
      "description": "Paramètres personnalisés du client",
      "additionalProperties": true
    },
    "start_date": {
      "type": "string",
      "format": "date",
      "description": "Date de début du service"
    }
  },
  "additionalProperties": false
}
