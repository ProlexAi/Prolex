{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://automatt.ai/schemas/payloads/git_clone.schema.json",
  "title": "Git Clone Payload",
  "description": "Payload pour cloner un dépôt Git",
  "type": "object",
  "required": ["repo_url", "destination"],
  "properties": {
    "repo_url": {
      "type": "string",
      "format": "uri",
      "description": "URL du dépôt Git à cloner"
    },
    "destination": {
      "type": "string",
      "description": "Chemin local où cloner le dépôt"
    },
    "branch": {
      "type": "string",
      "description": "Branche spécifique à cloner (optionnel)"
    },
    "depth": {
      "type": "integer",
      "minimum": 1,
      "description": "Profondeur du clone (shallow clone si < historique complet)"
    },
    "credentials": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
        },
        "token": {
          "type": "string",
          "description": "Token d'accès personnel ou mot de passe"
        }
      }
    }
  },
  "additionalProperties": false
}
