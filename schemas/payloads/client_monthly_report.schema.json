{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://automatt.ai/schemas/payloads/client_monthly_report.schema.json",
  "title": "Client Monthly Report Payload",
  "description": "Payload pour générer un rapport mensuel client",
  "type": "object",
  "required": ["client_id", "month", "year"],
  "properties": {
    "client_id": {
      "type": "string",
      "description": "Identifiant unique du client"
    },
    "month": {
      "type": "integer",
      "minimum": 1,
      "maximum": 12,
      "description": "Mois du rapport (1-12)"
    },
    "year": {
      "type": "integer",
      "minimum": 2024,
      "description": "Année du rapport"
    },
    "include_metrics": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "workflow_executions",
          "cost_analysis",
          "performance_metrics",
          "error_summary",
          "usage_statistics"
        ]
      },
      "default": ["workflow_executions", "cost_analysis", "error_summary"],
      "description": "Métriques à inclure dans le rapport"
    },
    "format": {
      "type": "string",
      "enum": ["pdf", "html", "markdown"],
      "default": "pdf",
      "description": "Format de sortie du rapport"
    },
    "send_email": {
      "type": "boolean",
      "default": true,
      "description": "Envoyer automatiquement le rapport par email"
    }
  },
  "additionalProperties": false
}
