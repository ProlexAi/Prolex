{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://automatt.ai/schemas/responses/task_create.response.json",
  "title": "Task Create Response",
  "description": "Réponse après création d'une tâche",
  "type": "object",
  "required": ["task_id", "status"],
  "properties": {
    "task_id": {
      "type": "string",
      "description": "Identifiant unique de la tâche créée"
    },
    "status": {
      "type": "string",
      "enum": ["created", "failed"],
      "description": "Statut de la création"
    },
    "title": {
      "type": "string",
      "description": "Titre de la tâche créée"
    },
    "due": {
      "type": "string",
      "format": "date-time",
      "description": "Date d'échéance"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "URL vers la tâche dans Google Tasks"
    },
    "error_message": {
      "type": "string",
      "description": "Message d'erreur si la création a échoué"
    }
  },
  "additionalProperties": false
}
